<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GardenCentreApp.ToolProducts"
             Title="Tools"
             BackgroundColor="#C8E6C9">

    <Grid RowSpacing="20"
          Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cart Button -->
        <ImageButton
            Grid.Row="0"
            x:Name="CartButton"
            Source="cart.png"
            HeightRequest="30"
            WidthRequest="30"
            HorizontalOptions="End"
            Margin="0,0,10,0"
            Clicked="OnCartClicked"/>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20">
                <!-- Garden Rake -->
                <Frame BackgroundColor="White"
                       Padding="15"
                       CornerRadius="10">
                    <Grid RowSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Image Grid.Row="0"
                               Source="rake.png"
                               HeightRequest="100"
                               WidthRequest="100"
                               Aspect="AspectFit"/>

                        <VerticalStackLayout Grid.Column="1"
                                             Grid.Row="0"
                                             Padding="15,0,0,0">
                            <Label Text="Garden Rake"
                                   FontSize="24"
                                   TextColor="#047B4D"/>
                            <Label Text="Rake to remove leafs from garden."
                                   FontSize="14"/>
                            <Label x:Name="RakePrice"
                                   Text="€25.99 each"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>

                        <Grid Grid.ColumnSpan="2"
                              Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackLayout Grid.Column="0"
                                         Orientation="Horizontal"
                                         Spacing="10">
                                <Button Text="-"
                                        x:Name="RakeMinus"
                                        Clicked="OnDecrementClicked"
                                        WidthRequest="40"/>
                                <Label x:Name="RakeQuantity"
                                       Text="0"
                                       VerticalOptions="Center"/>
                                <Button Text="+"
                                        x:Name="RakePlus"
                                        Clicked="OnIncrementClicked"
                                        WidthRequest="40"/>
                            </StackLayout>

                            <Button Grid.Column="2"
                                    Text="Add to Cart"
                                    x:Name="RakeAddToCart"
                                    Clicked="OnAddToCartClicked"
                                    BackgroundColor="#047B4D"
                                    TextColor="White"/>
                        </Grid>
                    </Grid>
                </Frame>

                <!-- Hand Tools -->
                <Frame BackgroundColor="White"
                       Padding="15"
                       CornerRadius="10">
                    <Grid RowSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Image Grid.Row="0"
                               Source="handtools.png"
                               HeightRequest="100"
                               WidthRequest="100"
                               Aspect="AspectFit"/>

                        <VerticalStackLayout Grid.Column="1"
                                             Grid.Row="0"
                                             Padding="15,0,0,0">
                            <Label Text="Hand Tools"
                                   FontSize="24"
                                   TextColor="#047B4D"/>
                            <Label Text="Hand tools for quick garden work."
                                   FontSize="14"/>
                            <Label x:Name="HandToolsPrice"
                                   Text="€17.99 each"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>

                        <Grid Grid.ColumnSpan="2"
                              Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackLayout Grid.Column="0"
                                         Orientation="Horizontal"
                                         Spacing="10">
                                <Button Text="-"
                                        x:Name="HandToolsMinus"
                                        Clicked="OnDecrementClicked"
                                        WidthRequest="40"/>
                                <Label x:Name="HandToolsQuantity"
                                       Text="0"
                                       VerticalOptions="Center"/>
                                <Button Text="+"
                                        x:Name="HandToolsPlus"
                                        Clicked="OnIncrementClicked"
                                        WidthRequest="40"/>
                            </StackLayout>

                            <Button Grid.Column="2"
                                    Text="Add to Cart"
                                    x:Name="HandToolsAddToCart"
                                    Clicked="OnAddToCartClicked"
                                    BackgroundColor="#047B4D"
                                    TextColor="White"/>
                        </Grid>
                    </Grid>
                </Frame>

                <!-- Garden Hose -->
                <Frame BackgroundColor="White"
                       Padding="15"
                       CornerRadius="10">
                    <Grid RowSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Image Grid.Row="0"
                               Source="garden_hose.png"
                               HeightRequest="100"
                               WidthRequest="100"
                               Aspect="AspectFit"/>

                        <VerticalStackLayout Grid.Column="1"
                                             Grid.Row="0"
                                             Padding="15,0,0,0">
                            <Label Text="Garden Hose"
                                   FontSize="24"
                                   TextColor="#047B4D"/>
                            <Label Text="Garden hose for watering plants."
                                   FontSize="14"/>
                            <Label x:Name="GardenHosePrice"
                                   Text="€29.99 each"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>

                        <Grid Grid.ColumnSpan="2"
                              Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackLayout Grid.Column="0"
                                         Orientation="Horizontal"
                                         Spacing="10">
                                <Button Text="-"
                                        x:Name="GardenHoseMinus"
                                        Clicked="OnDecrementClicked"
                                        WidthRequest="40"/>
                                <Label x:Name="GardenHoseQuantity"
                                       Text="0"
                                       VerticalOptions="Center"/>
                                <Button Text="+"
                                        x:Name="GardenHosePlus"
                                        Clicked="OnIncrementClicked"
                                        WidthRequest="40"/>
                            </StackLayout>

                            <Button Grid.Column="2"
                                    Text="Add to Cart"
                                    x:Name="GardenHoseAddToCart"
                                    Clicked="OnAddToCartClicked"
                                    BackgroundColor="#047B4D"
                                    TextColor="White"/>
                        </Grid>
                    </Grid>
                </Frame>

                <!-- Spade -->
                <Frame BackgroundColor="White"
                       Padding="15"
                       CornerRadius="10">
                    <Grid RowSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Image Grid.Row="0"
                               Source="spade.png"
                               HeightRequest="100"
                               WidthRequest="100"
                               Aspect="AspectFit"/>

                        <VerticalStackLayout Grid.Column="1"
                                             Grid.Row="0"
                                             Padding="15,0,0,0">
                            <Label Text="Spade tool"
                                   FontSize="24"
                                   TextColor="#047B4D"/>
                            <Label Text="Spade to dig holes for planting."
                                   FontSize="14"/>
                            <Label x:Name="SpadePrice"
                                   Text="€23.99 each"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>

                        <Grid Grid.ColumnSpan="2"
                              Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackLayout Grid.Column="0"
                                         Orientation="Horizontal"
                                         Spacing="10">
                                <Button Text="-"
                                        x:Name="SpadeMinus"
                                        Clicked="OnDecrementClicked"
                                        WidthRequest="40"/>
                                <Label x:Name="SpadeQuantity"
                                       Text="0"
                                       VerticalOptions="Center"/>
                                <Button Text="+"
                                        x:Name="SpadePlus"
                                        Clicked="OnIncrementClicked"
                                        WidthRequest="40"/>
                            </StackLayout>

                            <Button Grid.Column="2"
                                    Text="Add to Cart"
                                    x:Name="SpadeAddToCart"
                                    Clicked="OnAddToCartClicked"
                                    BackgroundColor="#047B4D"
                                    TextColor="White"/>
                        </Grid>
                    </Grid>
                </Frame>

                <!-- Shears -->
                <Frame BackgroundColor="White"
                       Padding="15"
                       CornerRadius="10">
                    <Grid RowSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Image Grid.Row="0"
                               Source="shears.png"
                               HeightRequest="100"
                               WidthRequest="100"
                               Aspect="AspectFit"/>

                        <VerticalStackLayout Grid.Column="1"
                                             Grid.Row="0"
                                             Padding="15,0,0,0">
                            <Label Text="Shears tool"
                                   FontSize="24"
                                   TextColor="#047B4D"/>
                            <Label Text="Shears to trim plants."
                                   FontSize="14"/>
                            <Label x:Name="PetuniaPrice"
                                   Text="€21.99 each"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>

                        <Grid Grid.ColumnSpan="2"
                              Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackLayout Grid.Column="0"
                                         Orientation="Horizontal"
                                         Spacing="10">
                                <Button Text="-"
                                        x:Name="ShearsMinus"
                                        Clicked="OnDecrementClicked"
                                        WidthRequest="40"/>
                                <Label x:Name="ShearsQuantity"
                                       Text="0"
                                       VerticalOptions="Center"/>
                                <Button Text="+"
                                        x:Name="ShearsPlus"
                                        Clicked="OnIncrementClicked"
                                        WidthRequest="40"/>
                            </StackLayout>

                            <Button Grid.Column="2"
                                    Text="Add to Cart"
                                    x:Name="ShearsAddToCart"
                                    Clicked="OnAddToCartClicked"
                                    BackgroundColor="#047B4D"
                                    TextColor="White"/>
                        </Grid>
                    </Grid>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
